<div class="container mt-3">
  <h1 class="mb-3 text-white bg-dark p-2">Metro İstanbul İstasyon Bilgi Listesi</h1>
  <ul class="list-group">
    <% @stations.each do |station| %>
      <li class="list-group-item bg-light">
        <h5 class="text-primary"><%= station['Name'] %></h5>
        <p class="mb-1"><span class="text-secondary">Id:</span> <%= station['Id'] %></p>
        <p class="mb-1"><span class="text-secondary">LineId:</span> <%= station['LineId'] %></p>
        <p class="mb-1"><span class="text-secondary">LineName:</span> <%= station['LineName'] %></p>
        <p class="mb-1"><span class="text-secondary">Description:</span> <%= station['Description'] %></p>
        <p class="mb-1"><span class="text-secondary">Order:</span> <%= station['Order'] %></p>
        <div class="row">
          <div class="col-sm-6 mb-2">
            <p class="mb-1"><span class="text-secondary">Escolator:</span> <%= station['DetailInfo']['Escolator'] %></p>
            <p class="mb-1"><span class="text-secondary">Lift:</span> <%= station['DetailInfo']['Lift'] %></p>
            <p class="mb-1"><span class="text-secondary">Baby Room:</span> <%= station['DetailInfo']['BabyRoom'] %></p>
            <p class="mb-1"><span class="text-secondary">WC:</span> <%= station['DetailInfo']['WC'] %></p>
          </div>
          <div class="col-sm-6">
            <p class="mb-1"><span class="text-secondary">Latitude:</span> <%= station['DetailInfo']['Latitude'] %></p>
            <p class="mb-1"><span class="text-secondary">Longitude:</span> <%= station['DetailInfo']['Longitude'] %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>